
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">


    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.srpay.in.UI.Recharge.RechargeViewModel" />

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/Padding5"
        android:background="@drawable/bgcoler"
        android:id="@+id/LL"
        >

        <!--<ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            >-->

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >-->

                // Header
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/back_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/Padding5"
                        android:onClick="@{() -> viewModel.back()}"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/back_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_heading"
                        android:layout_toRightOf="@id/back_icon"
                        android:text="Mobile Recharge Prepaid"
                        android:layout_marginRight="@dimen/margin30"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:textSize="18sp"
                        android:textColor="@color/ThemeColor"/>

                </RelativeLayout>

                // Form

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/margin10"
                    >

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/login_container"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="22dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/login_layout_padding"

                            android:weightSum="1">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="8dp"
                                android:textColorHint="@color/ThemeColor">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/mobile_edit_text"
                                    style="@style/LoginInputEditText"
                                    android:layout_gravity="center_horizontal"
                                    android:hint="Mobile Number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="16dp"

                                android:textColorHint="@color/ThemeColor">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/operator_edit_text"
                                    style="@style/LoginInputEditText"
                                    android:layout_gravity="center_horizontal"
                                    android:enabled="false"
                                    android:hint="Network Operator"
                                    android:onClick="@{() -> viewModel.chooseOperator()}"
                                    android:inputType="text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="16dp"

                                android:textColorHint="@color/ThemeColor">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/amount_edit_text"
                                    style="@style/LoginInputEditText"
                                    android:layout_gravity="center_horizontal"
                                    android:hint="Amount in Rs"
                                    android:inputType="number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                            </android.support.design.widget.TextInputLayout>
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/btn"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/login_button_margin"
                                android:onClick="@{() -> viewModel.onRechargeButtonClick()}"
                                android:textColor="@color/white"
                                android:background="@drawable/click_effect"
                                android:text="@string/MobileRecharge"
                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            <!--</LinearLayout>-->



        <!--</ScrollView>-->

    </RelativeLayout>
</layout>
